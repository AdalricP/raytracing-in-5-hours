{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C++: Build",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-O2",
                "-Wall",
                "-Wextra",
                "-g",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/build/raytracer"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build raytracer with clang++"
        },
        {
            "type": "shell",
            "label": "C++: Build and Run",
            "command": "/usr/bin/clang++ -std=c++17 -O2 -Wall -Wextra ${workspaceFolder}/src/*.cpp -o ${workspaceFolder}/build/raytracer && ${workspaceFolder}/build/raytracer > ${workspaceFolder}/output/image.ppm",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "detail": "Build and run raytracer, output to image.ppm"
        },
        {
            "type": "shell",
            "label": "C++: Clean",
            "command": "rm",
            "args": [
                "-rf",
                "${workspaceFolder}/build/*"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Clean build artifacts"
        }
    ]
}
